<?php

$name = "タロウ";
if ($name == "アキヤマ") {
  echo "私は" . $name . "です" . "\n";
} else {
  echo "あなたの名前は" . $name . "です" . "\n";
}

$total = 0;
echo $total;
for ($i = 1; $i <= 10000; $i++) {
  $total += $i;
}
echo $total . "\n";

$fruits = array("apple", "orange", "lemon", "meron", "peach");
foreach ($fruits as $fruit){
  echo "好きなフルーツは" . $fruit . "\n";
}

$start = 1;
$end = 100;
for ($i = $start; $i <= $end; $i++){
  if ($i % 5 == 0){
    echo $i."\n";
  }
}
