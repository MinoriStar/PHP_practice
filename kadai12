<?php

$name = "タロウ";
if ($name == "アキヤマ") {
  echo "私はあなたの名前です"."\n";
} else {
  echo "あなたの名前ではありません"."\n";
}

$total = 0;
echo $total;
for ($i = 0; $i <= 10000; $i++) {
  $total += $i;
}
echo $total."\n";

$fruites = array("apple", "orange", "lemon", "meron", "peach");
foreach($fruites as $fruite){
  echo "好きなフルーツは" . $fruite."\n";
}

$start = 1;
$end = 100;
for($i = $start; $i <= $end; $i++){
  if($i % 5 == 0){
    echo $i."\n";
  }
}
